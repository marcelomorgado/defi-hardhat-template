{
  "name": "defi-hardhat-template",
  "version": "1.0.0",
  "description": "Template for DeFi hardhat projects",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf typechain/hardhat typechain/extra artifacts cache",
    "typechain:extra": "typechain --target=ethers-v5 --out-dir typechain/extra './typechain/abi/*.json'",
    "precompile": "npm run typechain:extra",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "solhint": "hardhat check",
    "prettier:fix": "prettier --write 'contracts/**/*.sol'",
    "prettier": "prettier --list-different 'contracts/**/*.sol'",
    "lint": "npm run prettier && npm run solhint",
    "pretest": "npm run compile",
    "test": "hardhat test --logs",
    "verify": "hardhat etherscan-verify --solc-input",
    "deploy": "hardhat deploy",
    "mainnet:prepare": "cp .env.mainnet .env",
    "mainnet:deploy": "npm-run-all mainnet:prepare deploy",
    "mainnet:verify": "npm-run-all mainnet:prepare verify",
    "goerli:prepare": "cp .env.goerli .env",
    "goerli:deploy": "npm-run-all goerli:prepare deploy",
    "goerli:verify": "npm-run-all goerli:prepare verify",
    "bsc:prepare": "cp .env.bsc .env",
    "bsc:deploy": "npm-run-all bsc:prepare deploy",
    "bsc:verify": "npm-run-all bsc:prepare verify"
  },
  "author": "Marcelo Morgado <cmarcelom@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.4",
    "@nomiclabs/hardhat-solhint": "2.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "4.2.0",
    "@studydefi/money-legos": "2.4.2",
    "@typechain/ethers-v5": "7.0.1",
    "@typechain/hardhat": "2.1.2",
    "@types/chai": "4.2.21",
    "@types/mocha": "8.2.3",
    "@types/node": "16.4.13",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "chai": "4.3.4",
    "dotenv": "10.0.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.4.1",
    "hardhat": "2.4.3",
    "hardhat-deploy": "0.8.11",
    "hardhat-gas-reporter": "1.0.4",
    "hardhat-preprocessor": "0.1.4",
    "hardhat-spdx-license-identifier": "2.0.3",
    "hardhat-tracer": "1.0.0-alpha.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "prettier-plugin-solidity": "1.0.0-beta.16",
    "rimraf": "3.0.2",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.16",
    "ts-generator": "0.1.1",
    "ts-node": "10.1.0",
    "typechain": "5.1.1",
    "typescript": "4.3.5"
  }
}
