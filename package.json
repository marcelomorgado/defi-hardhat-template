{
  "name": "defi-hardhat-template",
  "version": "1.0.0",
  "description": "Template for DeFi hardhat projects",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf typechain/hardhat typechain/extra artifacts cache",
    "typechain:extra": "typechain --target=ethers-v5 --outDir typechain/extra './typechain/abi/*.json'",
    "precompile": "npm run typechain:extra",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "solhint": "hardhat check",
    "prettier:fix": "prettier --write 'contracts/**/*.sol'",
    "prettier": "prettier --list-different 'contracts/**/*.sol'",
    "lint": "npm run prettier && npm run solhint",
    "pretest": "npm run compile",
    "test": "hardhat test --logs",
    "verify": "hardhat etherscan-verify --solc-input",
    "deploy": "hardhat deploy",
    "mainnet:prepare": "cp .env.mainnet .env",
    "mainnet:deploy": "npm-run-all mainnet:prepare deploy",
    "mainnet:verify": "npm-run-all mainnet:prepare verify",
    "goerli:prepare": "cp .env.goerli .env",
    "goerli:deploy": "npm-run-all goerli:prepare deploy",
    "goerli:verify": "npm-run-all goerli:prepare verify",
    "bsc:prepare": "cp .env.bsc .env",
    "bsc:deploy": "npm-run-all bsc:prepare deploy",
    "bsc:verify": "npm-run-all bsc:prepare verify",
    "bsc-testnet:prepare": "cp .env.bsc-testnet .env",
    "bsc-testnet:deploy": "npm-run-all bsc-testnet:prepare deploy",
    "bsc-testnet:verify": "npm-run-all bsc-testnet:prepare verify"
  },
  "author": "Marcelo Morgado <cmarcelom@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.1",
    "@nomiclabs/hardhat-solhint": "2.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "3.4.1",
    "@studydefi/money-legos": "2.4.1",
    "@typechain/ethers-v5": "6.0.5",
    "@typechain/hardhat": "1.0.1",
    "@types/chai": "4.2.15",
    "@types/mocha": "8.2.2",
    "@types/node": "14.14.35",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "chai": "4.3.4",
    "dotenv": "8.2.0",
    "ethereum-waffle": "3.3.0",
    "ethers": "5.0.32",
    "hardhat": "2.1.1",
    "hardhat-deploy": "0.7.0-beta.50",
    "hardhat-gas-reporter": "1.0.4",
    "hardhat-preprocessor": "0.1.2",
    "hardhat-spdx-license-identifier": "2.0.3",
    "hardhat-tracer": "1.0.0-alpha.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "prettier-plugin-solidity": "1.0.0-beta.6",
    "rimraf": "2.7.1",
    "solidity-coverage": "0.7.16",
    "ts-generator": "0.1.1",
    "ts-node": "9.1.1",
    "typechain": "4.0.3",
    "typescript": "4.2.3"
  }
}
